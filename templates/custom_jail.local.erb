# Fail2ban custom filter
# Managed by Puppet

[<%= @name %>]
enabled = <%= @enabled %>
<% if @port -%>
port    = <%= @port %>
<% end -%>
<% if @protocol -%>
protocol = <%= @protocol %>
<% end -%>
<% if @logpath -%>
logpath = <%= @logpath %>
<% end -%>
<% if @backend -%>
backend = <%= @backend %>
<% end -%>
<% if @bantime -%>
bantime = <%= @bantime %>
<% end -%>
<% if @maxretry -%>
maxretry = <%= @maxretry %>
<% end -%>
<% if @filter -%>
filter = <%= @filter %>
<% end -%>
<% if @action -%>
action = <%= @action %>
<% end -%>
